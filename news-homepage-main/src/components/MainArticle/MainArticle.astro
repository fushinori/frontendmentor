---
import ArticleHeadline from "./ArticleHeadline.astro";
import ArticlePreview from "./ArticlePreview.astro";

interface Props {
  headline: string;
  preview: string;
}

const { headline, preview } = Astro.props as Props;
---

<article
  class="flex flex-col gap-6 lg:grid lg:grid-cols-2 lg:col-start-1 lg:col-end-3 lg:gap-6"
>
  <picture class="lg:col-span-full">
    <source srcset="/image-web-3-desktop.jpg" media="(min-width:768px)" />
    <img src="/image-web-3-mobile.jpg" alt="" />
  </picture>
  <ArticleHeadline headline={headline} />
  <ArticlePreview preview={preview} />
</article>
