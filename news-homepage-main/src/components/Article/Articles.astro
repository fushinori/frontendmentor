---
import type { Article as ArticleObject } from "../types";
import Article from "./Article.astro";

interface Props {
  articles: ArticleObject[];
}

const { articles } = Astro.props as Props;

const padZero = (count: number): string => {
  if (count >= 10) {
    return count.toString();
  }
  return count.toString().padStart(2, "0");
};
---

<section
  aria-labelledby="top-articles"
  class="flex flex-col gap-8 lg:gap-0 lg:grid lg:grid-cols-3 lg:col-span-full"
>
  <h2 id="top-articles" class="sr-only">Top Articles</h2>
  {
    articles.map((article, index) => (
      <Article article={article} count={padZero(index + 1)} />
    ))
  }
</section>
